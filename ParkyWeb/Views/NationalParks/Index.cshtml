@{ 
    ViewData["Title"] = "Index";
}
<div class="backgroundwhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">National Park List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-info bg-dark text-white"><i class="fas fa-plus"></i> &nbsp; Create New National Park</a>
        </div>
    </div>
    <br />
    <br />
    <div style="background-color:darkgrey" class="p-3 rounded">
        <table id="tblData" class="table table-striped table-bordered rounded" style="width:100%">
            <thead>
                <tr class="table-danger text-center">
                    <th>Name</th>
                    <th>State</th>
                    <th>Edit</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/nationalpark.js"></script>
}