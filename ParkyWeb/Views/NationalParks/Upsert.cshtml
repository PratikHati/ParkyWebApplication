@model ParkyWeb.Models.NationalPark
@{
    ViewData["Title"] = "Upsert";
}
<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="row px-2 mx-2 backgroundWhite ">


        @if (Model.ID != 0)
        {
            <div class="col-12 p-3">
                <h2 class="text-dark">Update:</h2>
            </div>
        }
        else
        {
            <div class="col-12 p-3">
                <h2 class="text-dark">Create:</h2>
            </div>
        }

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name">
                        National Park Name
                    </label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>         @*ASP.NET Validations*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="State">
                        Stete
                    </label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="State" />
                    <span class="text-danger" asp-validation-for="State"></span>         @*ASP.NET Validations*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Picture">
                        National Park Name
                    </label>
                </div>
                <div class="col-8">
                    <input type="file" id="projectImage" name="files" multiple class="form-control" asp-for="Picture" />
                    
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Established">
                        National Park Name
                    </label>
                </div>
                <div class="col-8">
                    <input id="datepicker" value="dateEst" class="form-control" asp-for="Established" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4 offset-4">
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
        <div class="col-4 text-right" style="width:250px;">
            <img src="https://via.placeholder.com/150" width="100%" />
        </div>
    </div>

</form>
